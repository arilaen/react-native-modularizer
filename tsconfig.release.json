{
  "compilerOptions": {
    "target": "es2018",
    "allowJs": false,
    "esModuleInterop": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types", "./typings"],
    "preserveSymlinks": true,
    "strictNullChecks": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "dist",
    "noImplicitAny": true,
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "test", "dist"]
}
